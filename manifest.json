{
  "manifest_version": 3,
  "name": "Post Quality Index for HotCopper",
  "version": "0.2.0",
  "description": "Adds a GA-per-post PQI badge to HotCopper threads. Unofficial.",
  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" },
  "content_scripts": [{
    "matches": ["*://www.hotcopper.com.au/*", "*://hotcopper.com.au/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "host_permissions": ["*://www.hotcopper.com.au/*", "*://hotcopper.com.au/*"]
}